<!-- Edit (Users) Page -->
<div class="container-fluid">
  <h1><i class="fa-solid fa-user-pen"></i> Edit (User)</h1>
  <form action="/users/edit/{{data.id}}" method="post" class="">
    <div class="form-group row mt-3">
      <b><label for="name" class="col-4 col-form-label">Name:</label></b>
      <div class="">
        <input type="text" class="form-control" id="name" name="name" value="{{data.name}}" required>
      </div>
    </div>
    <div class="form-group row mt-3">
      <b><label for="lastname" class="col-4 col-form-label">Last Name:</label></b>
      <div class="">
        <input type="text" class="form-control" id="lastname" name="lastname" value="{{data.lastname}}" required>
      </div>
    </div>
    <div class="form-group row mt-3">
      <b><label for="username" class="col-4 col-form-label">Username:</label></b>
      <div class="">
        <input type="text" class="form-control" id="username" name="username" value="{{data.username}}" required>
      </div>
    </div>
    <div class="form-group row mt-3">
      <b><label for="password" class="col-4 col-form-label">Password:</label></b>
      <div class="">
        <input type="password" class="form-control" id="password" name="password" value="{{data.password}}" required>
      </div>
    </div>
    <div class="form-group row mt-3">
      <b><label for="email" class="col-4 col-form-label">Email:</label></b>
      <div class="">
        <input type="email" class="form-control" id="email" name="email" value="{{data.email}}" required>
      </div>
    </div>
    <div class="form-group row mt-4">
      <div class="">
        <button type="submit" class="btn btn-primary"><b>Edit</b></button>
      </div>
    </div>
  </form>
</div>
<!-- Edit (Users) Page -->